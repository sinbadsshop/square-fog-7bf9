---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Suppliyer - Car Parts Supplier</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: Arial, sans-serif; }
        body { background-color: #f4f4f4; color: #333; }
        header { background: #222; color: #fff; padding: 20px; text-align: center; }
        nav { display: flex; justify-content: center; padding: 10px; background: #444; }
        nav a { color: white; margin: 0 15px; text-decoration: none; font-size: 18px; }
        .hero { background: url('car-parts-banner.jpg') no-repeat center/cover; height: 300px; text-align: center; color: white; display: flex; align-items: center; justify-content: center; }
        .hero h1 { background: rgba(0, 0, 0, 0.6); padding: 10px 20px; border-radius: 10px; }
        .search-bar { text-align: center; margin: 20px; }
        .search-bar input { width: 60%; padding: 10px; font-size: 18px; }
        .search-bar button { padding: 10px 20px; background: #ff6600; color: white; border: none; cursor: pointer; font-size: 18px; }
        .products { display: flex; justify-content: space-around; flex-wrap: wrap; padding: 20px; }
        .product { background: white; padding: 15px; margin: 10px; width: 250px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1); text-align: center; }
        .product img { width: 100%; }
        footer { background: #222; color: white; text-align: center; padding: 20px; margin-top: 20px; }
    </style>
</head>
<body>
    <header>
        <h1>Suppliyer</h1>
        <p>Your Trusted Car Parts Supplier</p>
    </header>
    
    <nav>
        <a href="#">Home</a>
        <a href="#">About Us</a>
        <a href="#">Products</a>
        <a href="#">Contact</a>
    </nav>
    
    <section class="hero">
        <h1>Find the Right Parts for Your Car</h1>
    </section>
    
    <div class="search-bar">
        <input type="text" placeholder="Search for car parts...">
        <button>Search</button>
    </div>
    
    <section class="products">
        <div class="product">
            <img src="engine-part.jpg" alt="Engine Part">
            <h3>Engine Part</h3>
            <p>$199.99</p>
        </div>
        <div class="product">
            <img src="brake-pad.jpg" alt="Brake Pad">
            <h3>Brake Pad</h3>
            <p>$49.99</p>
        </div>
        <div class="product">
            <img src="headlight.jpg" alt="Headlight">
            <h3>Headlight</h3>
            <p>$89.99</p>
        </div>
    </section>
    
    <footer>
        <p>&copy; 2025 Suppliyer - All Rights Reserved</p>
    </footer>
</body>
</html>
